{

  "manifest_version": 2,
  "name": "Letterboxd Shortcuts",
  "description": "Keyboard shortcuts for Letterboxd.",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.letterboxd.com/*"],
      "include_globs": ["*letterboxd.com/*/films/diary*", "*letterboxd.com/*/tag/*/diary*"],
      "js": ["js/shortcutsMain.js", "js/shortcutsDiary.js"],
      "css": ["js/shortcuts.css"]
    },
    {
      "matches": ["*://*.letterboxd.com/film/*"],
      "js": ["js/shortcutsMain.js", "js/shortcutsFilm.js"]
    },
    {
      "matches": ["*://*.letterboxd.com/*"],
      "exclude_globs": ["*letterboxd.com/film/*", "*letterboxd.com/*/films/diary*", "*letterboxd.com/*/tag/*/diary*"],
      "js": ["js/shortcutsMain.js", "js/shortcutsFilmGrid.js"],
      "css": ["css/shortcuts.css"]
    }
  ]

}